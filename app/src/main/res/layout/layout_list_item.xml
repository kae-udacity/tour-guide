<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/attraction_image"
        android:layout_width="@dimen/size_list_item"
        android:layout_height="@dimen/size_list_item"
        android:contentDescription="@string/attraction_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_list_item"
        android:orientation="vertical"
        android:padding="@dimen/padding_list_item_text_container">

        <TextView
            android:id="@+id/attraction_name"
            style="@style/ListItemText"
            android:textSize="@dimen/text_size_attraction_name" />

        <TextView
            android:id="@+id/attraction_address"
            style="@style/ListItemText"
            android:textSize="@dimen/text_size_attraction_address" />

    </LinearLayout>
</LinearLayout>